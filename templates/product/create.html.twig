{% extends "base.html.twig" %}

{% block title %}Create a new Product{% endblock %}

{% block body %}
<div class="container-fluid mt-3">
      <h2 class="text-center mt-5">CREATE PRODUCT</h2>
      <div class="col-md-6"></div>
          {{ form_start (form) }}
              <div class="form-group">
                  {{ form_label (form.name) }}
                  {{ form_widget (form.name, {'attr': {'class' : 'form-control'}}) }}
              </div>
              <div class="form-group">
                  {{ form_label (form.price) }}
                  {{ form_widget (form.price, {'attr': {'class' : 'form-control'}}) }}
              </div>
               <div class="form-group">
                  {{ form_label (form.description) }}
                  {{ form_widget (form.description, {'attr': {'class' : 'form-control'}}) }}
              </div>
              <div class="form-group">
                  {{ form_widget (form.DateAdded, {'attr': {'class' : 'form-control'}}) }}
              </div>
              <div class="form-group">
                  <p> Image </p>
                  {{ form_widget (form.images, {'attr': {'class' : 'form-control'}}) }}
              </div>
              <div class="form-group text-center mt-3">
                  <button class="btn btn-primary btn-lg">CREATE</button>
              </div>
          {{ form_end (form)}}
  </div>   


{% endblock %}
