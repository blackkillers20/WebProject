{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h2 class="text-center mt-5">Dragon Ball Sections</h2>
    <h1>This section is all about Dragon Ball related Games for all platform!</h1>
    <h3>Games Product are shown below:</h3>
    <div class="row">
        {% for product in products %}
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="{{ asset ('images/' ~ product.images) }}" width="300px" height="300px">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description }}</p>
                        <div class="d-flex justify-content-between align-item-center">
                            <a href="{{ path('product.detail', {id: product.id}) }}" class="btn btn-dark">View details</a>
                            <span class="h5 mt-auto">{{ product.price }} â‚¬</span>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}