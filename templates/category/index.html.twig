{% extends 'base.html.twig' %}

{% block title %}View Categories!{% endblock %}

{% block body %}
<div class="container-fluid">
<a class="btn btn-primary" href="{{ path ('create_category') }}">Create New Category</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Categories</th>
            <th scope="col">Games</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for category in categories %}
        <tr>
            <td scope="row">{{ category.Name }}</td>
            <td scope="row">
                    {% for product in category.Products %}
                        <a href="{{ path ('product.detail', {'id' : product.id }) }}">
                              {{ product.name }}
                        </a>
             {% endfor %}
            <td scope="row"> 
                <a class="btn btn-info" href="{{ path ( 'category_detail' , {'id' : category.id } ) }}">Detail</a>
                <a class="btn btn-warning" href="{{ path ( 'update_category' , {'id' : category.id } ) }}">Update</a>
                <a class="btn btn-danger" href="{{ path ( 'delete_category' , {'id' : category.id } ) }}"
                                          onclick = "return confirm('Are you sure to delete ?')"
                >Delete</a>
            </td>
        </tr> 
    {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}
